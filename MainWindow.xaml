<Window x:Class="pz4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Manager" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="User Management" FontSize="16" FontWeight="Bold"/>
            <Button x:Name="btnLoad" Content="Load Users" Click="btnLoad_Click" Width="100" Margin="0,5"/>
        </StackPanel>

        <DataGrid x:Name="dataGridUsers" Grid.Row="1" Margin="10" AutoGenerateColumns="True"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button x:Name="btnAdd" Content="Add User" Click="btnAdd_Click" Width="80" Margin="0,0,5,0"/>
            <Button x:Name="btnDelete" Content="Delete User" Click="btnDelete_Click" Width="80" Margin="5,0"/>
            <Button x:Name="btnSave" Content="Save All" Click="btnSave_Click" Width="80" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>